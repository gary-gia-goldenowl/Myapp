<h1>All users</h1>
<table>
        <tbody id="users">
            <% @users.each do |u| %>
                <%= render partial: 'user', locals: { user: u } %>
            <% end %>  
        </tbody>

</table>
<%= form_for(@user, remote: true) do |f| %>

    <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    
    <%= f.label :first_name %><br><br>
    <%= f.text_field :first_name %><br>
    <div id = "fnameBlock" class = "error-mess"></div><br>

    <%= f.label :last_name %><br><br>
    <%= f.text_field :last_name %> <br>
    <div id = "lnameBlock" class = "error-mess"></div><br>

    <%= f.label :email %> <br><br>
    <%= f.text_field :email %><br>
    <span id = "emailBlock"class = "error-mess" ></span><br><br>

    <%= f.label :gender %> <br><br>
    <%= f.text_field :gender %><br>
    <span id = "genderBlock"class = "error-mess" ></span><br><br>


    <%= f.label :age %> <br><br>
    <%= f.text_field :age %><br>
    <span id = "ageBlock"class = "error-mess" ></span><br><br>


    <%= f.label :role %> <br><br>
    <%= f.text_field :role %><br>
    <span id = "roleBlock"class = "error-mess" ></span><br><br>


    <%= f.submit %>
<% end %>

