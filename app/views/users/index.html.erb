<h1>All users</h1>
<table>
        <tbody id="users">
            <% @users.each do |u| %>
                <%= render partial: 'user', locals: { user: u } %>
            <% end %>  
        </tbody>
</table>
<%= form_for(@user, remote: true) do |f| %>

    <%= f.label :first_name %><br><br>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %><br><br>
    <%= f.text_field :last_name %> <br><br>

    <%= f.label :email %> <br><br>
    <%= f.text_field :email %><br><br>

    <%= f.label :gender %> <br><br>
    <%= f.text_field :gender %><br><br>

    <%= f.label :age %> <br><br>
    <%= f.text_field :age %><br><br>

    <%= f.label :role %> <br><br>
    <%= f.text_field :role %><br><br>
    
    <%= f.submit %>
<% end %>

