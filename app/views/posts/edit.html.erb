<%= form_for @post do |f| %>
    <br />
    <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    
    <%= f.label :title %>
    <%= f.text_field :title %> <br>

    <%= f.label :content %>
    <%= f.text_field :content %> <br>

    <%= f.label :images %> 
    <%= f.text_field :images %><br>
    
    <br><%= f.submit %> 

<% end %>