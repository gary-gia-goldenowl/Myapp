<%= form_for @post do |f| %>
    <br />
    <% @post.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>

    <%= f.hidden_field :user_id %><br>
        
    <%= f.hidden_field :category_id %><br>


    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_field :content %> <br><br>

    <%= f.label "image" %><br>
    <%= f.file_field :images, multiple: true %><br><br>
    
    <%= f.submit %>
<% end %>